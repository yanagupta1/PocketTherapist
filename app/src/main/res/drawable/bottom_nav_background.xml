<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main very dark gray background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D0D0D" />
        </shape>
    </item>

    <!-- Top edge gradient glow (bright center, fades to dark gray) -->
    <item
        android:height="1dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#0D0D0D"
                android:centerColor="#888888"
                android:endColor="#0D0D0D"
                android:angle="0" />
        </shape>
    </item>

</layer-list>
