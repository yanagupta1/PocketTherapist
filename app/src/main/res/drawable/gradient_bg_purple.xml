<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid black base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Subtle purple glow at top, short fade -->
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <size android:height="120dp" />
            <gradient
                android:startColor="#40BB8FCE"
                android:endColor="#00000000"
                android:angle="270"
                android:type="linear" />
        </shape>
    </item>

</layer-list>
