<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_orange"
    android:orientation="vertical">

    <!-- Header (fixed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommendations"
            style="@style/TextAppearance.App.FragmentTitle" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/recommendations_desc"
            style="@style/TextAppearance.App.FragmentSubtitle" />

    </LinearLayout>

    <!-- Wellness Recommendation Card (fixed) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWellness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/dark_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtWellnessLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wellness_tip"
                android:textColor="@color/accent_orange"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05" />

            <TextView
                android:id="@+id/txtWellnessTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/loading"
                android:textColor="@color/text_light"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtWellnessDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.3"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progressWellness"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:indeterminateTint="@color/accent_orange" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Music Section Header (fixed) -->
    <TextView
        android:id="@+id/txtMusicHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="@string/music_for_you"
        android:textColor="@color/text_light"
        style="@style/TextAppearance.App.SectionHeader" />

    <!-- Swipe to Refresh - only for music grid -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Songs Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSongs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false" />

                <!-- Empty state when no journal entries -->
                <LinearLayout
                    android:id="@+id/layoutEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_journal_for_recommendations"
                        android:textColor="@color/hint_color"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Loading state for songs -->
                <LinearLayout
                    android:id="@+id/layoutSongsLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <ProgressBar
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:indeterminateTint="@color/accent_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/loading_songs"
                        android:textColor="@color/hint_color"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
