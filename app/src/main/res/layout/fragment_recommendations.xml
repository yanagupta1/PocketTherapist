<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_orange"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recommendations"
                style="@style/TextAppearance.App.FragmentTitle" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/recommendations_desc"
                style="@style/TextAppearance.App.FragmentSubtitle" />

        </LinearLayout>

        <!-- Wellness Card - Compact -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWellness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/dark_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtWellnessLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/wellness_tip"
                        android:textColor="@color/accent_orange"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <ProgressBar
                        android:id="@+id/progressWellness"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:indeterminateTint="@color/accent_orange" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtWellnessTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/loading"
                    android:textColor="@color/text_light"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtWellnessDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:textColor="@color/hint_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:visibility="gone" />

                <!-- Friendly reasoning - always shown -->
                <TextView
                    android:id="@+id/txtWellnessReasoning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:textColor="@color/accent_orange"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="11sp"
                    android:fontStyle="italic"
                    android:visibility="gone" />

                <!-- Expandable section -->
                <LinearLayout
                    android:id="@+id/layoutWellnessDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hint_color"
                        android:alpha="0.2"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/txtWellnessDetailedExplanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_light"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.3" />

                    <Button
                        android:id="@+id/btnWatchVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:text="Watch Tutorial"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/accent_red"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTapToExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tap to learn more"
                    android:textColor="@color/accent_orange"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="11sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Music Section -->
        <TextView
            android:id="@+id/txtMusicHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="4dp"
            android:text="@string/music_for_you"
            android:textColor="@color/text_light"
            style="@style/TextAppearance.App.SectionHeader" />

        <!-- Friendly music reasoning - always shown -->
        <TextView
            android:id="@+id/txtMusicReasoning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="12dp"
            android:text=""
            android:textColor="@color/accent_orange"
            android:fontFamily="@font/poppins_regular"
            android:textSize="11sp"
            android:fontStyle="italic"
            android:visibility="gone" />

        <!-- Songs Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Loading state -->
        <LinearLayout
            android:id="@+id/layoutSongsLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ProgressBar
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:indeterminateTint="@color/accent_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/loading_songs"
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp" />

        </LinearLayout>

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/layoutEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_journal_for_recommendations"
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- AI Disabled State -->
        <LinearLayout
            android:id="@+id/layoutAIDisabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤–"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Features Required"
                android:textColor="@color/text_light"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This page provides personalized wellness tips and music recommendations based on your journal entries. To use this feature, you need to enable AI-powered recommendations."
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginBottom="8dp" />

            <!-- What you get -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="With AI enabled, you'll get:"
                android:textColor="@color/text_light"
                android:fontFamily="@font/poppins_medium"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ¨ Personalized wellness techniques\nðŸŽµ Music curated for your mood\nðŸ’¬ Empathetic AI companion responses"
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1.5"
                android:layout_marginBottom="24dp" />

            <!-- Enable Button -->
            <Button
                android:id="@+id/btnEnableAI"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Enable AI Features"
                android:textColor="@color/white"
                android:backgroundTint="@color/accent_orange"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:paddingHorizontal="32dp" />

            <!-- Privacy note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Your privacy matters. You'll see exactly what data is shared before enabling."
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11sp"
                android:textAlignment="center"
                android:fontStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
