<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                style="@style/TextAppearance.App.FragmentTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Capture your thoughts and feelings"
                style="@style/TextAppearance.App.FragmentSubtitle" />

        </LinearLayout>

        <!-- ⭐ Welcome Blurb Section ⭐ -->
        <LinearLayout
            android:id="@+id/journalWelcomeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp">

            <!-- Greeting -->
            <TextView
                android:id="@+id/journalWelcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:text="Welcome! How are we feeling today?" />

            <!-- + icon row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@color/text_light"
                    android:src="@drawable/ic_plus"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record a new journal entry"
                    android:textColor="@color/text_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Activities icon row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@color/text_light"
                    android:src="@drawable/ic_activities"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View your health goals and nearby activities"
                    android:textColor="@color/text_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Recommendations icon row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@color/text_light"
                    android:src="@drawable/ic_recommendations"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View personalized recommendations"
                    android:textColor="@color/text_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Profile row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:tint="@color/text_light"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit your profile"
                    android:textColor="@color/text_light"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- ⭐ End Welcome Section ⭐ -->

        <!-- Journal entries list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/journalRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp" />

    </LinearLayout>

    <!-- Dim overlay -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- New entry overlay -->
    <ScrollView
        android:id="@+id/entryOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_card"
        android:fillViewport="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/etNewEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="400dp"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:hint="What's on your mind?"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="20dp"
            android:textColor="@color/text_light"
            android:textColorHint="@color/hint_color"
            android:textSize="16sp" />
    </ScrollView>

    <!-- Floating Action Button -->
    <FrameLayout
        android:id="@+id/fabContainer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fab_background"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/fabIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_plus"
            app:tint="@android:color/white" />
    </FrameLayout>

</FrameLayout>
