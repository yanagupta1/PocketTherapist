<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                style="@style/TextAppearance.App.FragmentTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Capture your thoughts and feelings"
                style="@style/TextAppearance.App.FragmentSubtitle" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/journalRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp" />

    </LinearLayout>

    <!-- Dim overlay -->
    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- New entry card - bottom aligned, 70% of screen height -->
    <androidx.cardview.widget.CardView
        android:id="@+id/entryOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="@color/dark_card"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header with date and mood selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtEntryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="@color/accent_purple"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Entry"
                        android:textColor="@color/text_light"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_semibold" />

                </LinearLayout>

                <!-- Mood selector -->
                <LinearLayout
                    android:id="@+id/layoutMoodSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/btnMoodHappy"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸ˜Š"
                        android:textSize="20sp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/btnMoodSad"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸ˜¢"
                        android:textSize="20sp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/btnMoodAngry"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸ˜¤"
                        android:textSize="20sp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/btnMoodAnxious"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸ˜°"
                        android:textSize="20sp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/btnMoodCalm"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸ˜Œ"
                        android:textSize="20sp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/hint_color"
                android:alpha="0.2" />

            <!-- Title field -->
            <EditText
                android:id="@+id/etEntryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Give it a title..."
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/text_light"
                android:textColorHint="@color/hint_color"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_medium" />

            <!-- Main text area -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <EditText
                    android:id="@+id/etNewEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:background="@android:color/transparent"
                    android:gravity="top|start"
                    android:hint="What's on your mind? Tap the mic button to speak..."
                    android:inputType="textMultiLine|textCapSentences"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="20dp"
                    android:textColor="@color/text_light"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingMultiplier="1.4" />

            </ScrollView>

            <!-- Bottom hint -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hold mic to speak â€¢ Tap outside to save"
                android:textColor="@color/hint_color"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingBottom="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- FAB container positioned above nav bar -->
    <FrameLayout
        android:id="@+id/fabContainer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fab_background"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/fabIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_plus"
            app:tint="@android:color/white" />

    </FrameLayout>

</FrameLayout>
