<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rounded_card"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <!-- Header row containing mood + title -->
    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mood emoji (if set) -->
        <TextView
            android:id="@+id/txtMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginEnd="10dp"
            android:visibility="gone" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtEntryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/text_light"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Preview text -->
    <TextView
        android:id="@+id/txtEntryPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="3"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/hint_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerRow" />

    <TextView
        android:id="@+id/txtEntryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/accent_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEntryPreview"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Action buttons (shown when expanded) -->
    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEntryPreview"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/accent_blue" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/accent_red" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
