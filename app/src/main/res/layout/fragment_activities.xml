<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_purple"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activities"
            style="@style/TextAppearance.App.FragmentTitle" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/activities_desc"
            style="@style/TextAppearance.App.FragmentSubtitle" />

    </LinearLayout>

    <!-- Step Counter Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStepCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/dark_card"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header row with label and edit button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtStepLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/daily_step_goal"
                    android:textColor="@color/accent_purple"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05" />

                <ImageView
                    android:id="@+id/btnEditGoal"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="@string/edit_goal"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Step count display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtStepCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_light"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/txtStepGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="/ 7,000 steps"
                    android:textColor="@color/hint_color"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressSteps"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/accent_purple"
                android:progressBackgroundTint="@color/dark_gray" />

            <!-- Progress percentage -->
            <TextView
                android:id="@+id/txtProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0% of daily goal"
                android:textColor="@color/hint_color"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Wellness Places Section Header -->
    <TextView
        android:id="@+id/txtAmenitiesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="@string/wellness_places"
        android:textColor="@color/text_light"
        style="@style/TextAppearance.App.SectionHeader" />

    <!-- Swipe to Refresh for amenities -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Loading State -->
                <LinearLayout
                    android:id="@+id/layoutAmenitiesLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:indeterminateTint="@color/accent_purple" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/loading_places"
                        android:textColor="@color/hint_color"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Amenities RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAmenities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:visibility="gone" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/layoutAmenitiesEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_places_found"
                        android:textColor="@color/hint_color"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
