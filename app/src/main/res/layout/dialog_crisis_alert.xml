<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/dark_surface">

    <!-- Warning Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_dialog_alert"
            android:contentDescription="Warning"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We're Here For You"
            android:textColor="@color/accent_red"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold" />

    </LinearLayout>

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It sounds like you might be going through a really difficult time. You're not alone, and help is available right now."
        android:textColor="@color/text_light"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginBottom="20dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color"
        android:alpha="0.3"
        android:layout_marginBottom="16dp" />

    <!-- Emergency Resources Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY RESOURCES"
        android:textColor="@color/hint_color"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0.1"
        android:layout_marginBottom="12dp" />

    <!-- Call 988 Button -->
    <Button
        android:id="@+id/btnCall988"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Call 988 - Crisis Lifeline"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="#D9534F"
        android:layout_marginBottom="10dp" />

    <!-- Text Crisis Line Button -->
    <Button
        android:id="@+id/btnTextCrisisLine"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Text HOME to 741741"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@color/accent_purple"
        android:layout_marginBottom="10dp" />

    <!-- Call 911 Button -->
    <Button
        android:id="@+id/btnCall911"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Call 911 - Emergency"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@color/accent_orange"
        android:layout_marginBottom="20dp" />

    <!-- Reassurance text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember: Asking for help is a sign of strength. These services are free, confidential, and available 24/7."
        android:textColor="@color/hint_color"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingMultiplier="1.3"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Dismiss Button -->
    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="I understand, continue"
        android:textColor="@color/hint_color"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_regular"
        android:backgroundTint="@color/dark_card" />

</LinearLayout>
